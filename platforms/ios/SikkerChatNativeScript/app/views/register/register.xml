<Page loaded="loaded">
  <StackLayout orientation="vertical">
      <Image src="res://SikkerLogo" stretch="none" horizontalAlignment="center" />
      <Label text="SikkerChat SignUp" horizontalAlignment="center"/>
      <TextField id="user" hint=" Create Username" autocorrect="false" autocapitalizationType="none" />
      <TextField id="pass" hint=" Create Password" keyboardType="phone" secure="true" />

      <Button text="SignUp for SikkerChat" class="link" tap="register"/>
    </StackLayout>
</Page>
