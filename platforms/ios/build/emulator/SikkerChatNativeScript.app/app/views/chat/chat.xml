<Page loaded="loaded">
  <ActionBar title = "PlaceHolder, CHATNAME"></ActionBar>
    <GridLayout rows="*,100">
      <ListView items="{{ messages }}">
        <ListView.ItemTemplate>
          <GridLayout *ngFor="let item of data" width="50%" height="150">
            <Label row="1" font-size="12" horizontalAlignment="left" verticalAlignment="center"/>
          </GridLayout>
      </ListView>
      <StackLayout row="1" orientation="horizontal">
        <TextField width="75%" hint="message" autocorrect="true"/>
        <Button textWrap="true" width="25%" textAlignment="text">
            <FormattedString>
                <Span text="Send"></Span>
            </FormattedString>
        </Button>
      </StackLayout>
    </GridLayout>
  </Page>





</Page>
