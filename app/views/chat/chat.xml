<!-- XML for Chat UI -->
<Page loaded="loaded">
  <ActionBar title = "PlaceHolder, CHATNAME"></ActionBar>
    <GridLayout rows="*,100"><!-- Dictates the number of rows in the grid -->
      <ListView items="{{ messages }}"><!-- To fill the list -->
        <ListView.ItemTemplate>
          <GridLayout width="50%" height="150">
            <Label row="1" font-size="12" horizontalAlignment="left" verticalAlignment="center"/>
          </GridLayout>
        </ListView.ItemTemplate>
      </ListView>
      <StackLayout row="1" orientation="horizontal"><!-- Horizontal StackLayout for message area and button -->
        <TextField width="65%" hint="message" autocorrect="true"/>
        <Button width="30%" text="Send">
        </Button>
      </StackLayout>
    </GridLayout>
  </Page>
